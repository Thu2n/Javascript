<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Tarefas</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    input, button {
      padding: 8px;
      margin-right: 10px;
    }
    ul {
      margin-top: 20px;
      padding: 0;
      list-style-type: none;
    }
    li {
      margin-bottom: 10px;
      padding: 10px;
      border: 1px solid #ccc;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .descricao {
      flex-grow: 1;
    }
    .status {
      margin-left: 10px;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <h1>Lista de Tarefas</h1>
  <input type="text" id="descricao" placeholder="Descrição da tarefa">
  <select id="status">
    <option value="pendente">Pendente</option>
    <option value="concluída">Concluída</option>
  </select>
  <button id="adicionar">Adicionar</button>

  <ul id="listaTarefas"></ul>

  <script>
    let tarefas = JSON.parse(localStorage.getItem("tarefas")) || [];

    function salvarTarefas() {
      localStorage.setItem("tarefas", JSON.stringify(tarefas));
    }

    function renderizarTarefas() {
      const lista = document.getElementById("listaTarefas");
      lista.innerHTML = "";

      if (tarefas.length === 0) {
        lista.innerHTML = "<li>Nenhuma tarefa adicionada.</li>";
        return;
      }

      tarefas.forEach((tarefa, index) => {
        const item = document.createElement("li");

        item.innerHTML = `
          <span class="descricao">${tarefa.descricao}</span>
          <span class="status">${tarefa.status}</span>
          <button onclick="excluirTarefa(${index})">Excluir</button>
        `;

        lista.appendChild(item);
      });
    }

    function excluirTarefa(indice) {
      tarefas.splice(indice, 1);
      salvarTarefas();
      renderizarTarefas();
    }

    document.getElementById("adicionar").addEventListener("click", () => {
      const descricao = document.getElementById("descricao").value.trim();
      const status = document.getElementById("status").value;

      if (descricao) {
        tarefas.push({ descricao, status });
        salvarTarefas();
        renderizarTarefas();
        document.getElementById("descricao").value = "";
      }
    });

    // Renderiza ao carregar a página
    renderizarTarefas();
  </script>

</body>
</html>
